<div class="min-h-screen flex items-center justify-center bg-green-50 p-4">
  <!-- ĞšĞ°Ñ€Ñ‚ĞºĞ° -->
  <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md border border-green-200">
    <h1 class="text-2xl font-bold mb-6 text-center text-green-600">ğŸ’± Currency Converter</h1>

    <!-- Ğ¤Ğ¾Ñ€Ğ¼Ğ° -->
    <%= form_with url: root_path, method: :get, local: true, class: "space-y-5" do %>
      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= label_tag :from, "From", class: "block text-sm font-semibold text-green-700 mb-1" %>
          <%= select_tag :from, options_for_select(@currencies, params[:from]),
                         class: "mt-1 block w-full rounded-lg border border-green-300 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 shadow-sm p-2" %>
        </div>
        <div>
          <%= label_tag :to, "To", class: "block text-sm font-semibold text-green-700 mb-1" %>
          <%= select_tag :to, options_for_select(@currencies, params[:to]),
                         class: "mt-1 block w-full rounded-lg border border-green-300 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 shadow-sm p-2" %>
        </div>
      </div>
      <!-- Ğ¡ÑƒĞ¼Ğ° -->
      <div>
        <%= label_tag :amount, "Amount", class: "block text-sm font-semibold text-green-700 mb-1" %>
        <%= text_field_tag :amount, params[:amount], step: "0.01",
                             class: "mt-1 block rounded-lg border border-green-300 focus:border-green-500 focus:ring focus:ring-green-200 focus:ring-opacity-50 shadow-sm p-2" %>
      </div>

      <!-- ĞšĞ½Ğ¾Ğ¿ĞºĞ° -->
      <div>
        <%= submit_tag "Convert",
                       class: "w-full bg-green-600 text-white font-semibold py-2 px-4 rounded-lg shadow hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-1 transition" %>
      </div>
    <% end %>

    <!-- Ğ ĞµĞ·ÑƒĞ»ÑŒÑ‚Ğ°Ñ‚ -->
    <% if @result.present? %>
      <div class="mt-6 p-5 bg-green-50 border border-green-200 rounded-xl shadow-inner text-center">
        <p class="text-green-800 font-bold text-lg">
          <%= @result[:amount] %> <%= @result[:from] %> =
          <%= @result[:converted] %> <%= @result[:to] %>
        </p>
        <p class="text-sm text-gray-600 mt-1">Rate: <%= @result[:rate] %></p>
      </div>
    <% elsif flash[:alert] %>
      <div class="mt-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 shadow-inner">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
